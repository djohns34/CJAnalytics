<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MainScreen">
        <item name="android:background">@color/cjbackground</item>
    </style>

    <style name="CJTheme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="RootViewGroup">
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="CJDefaultView">
        <item name="android:divider">@color/dark_blue</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:listSelector">@drawable/light_blue_button</item>
    </style>

    <style name="CJListView" parent="@android:style/Widget.ListView">
        <item name="android:divider">@color/dark_blue</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:listSelector">@drawable/light_blue_button</item>
    </style>

    <style name="CJSpinner">
        <item name="android:background">@drawable/dropdown</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="CJDateButton">
 		<item name="android:textColor">@color/light_gray</item>
 		<item name="android:textColorHint">@color/light_blue</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:background">@drawable/light_blue_input</item>
        <item name="android:clickable">true</item>
    </style>

 
</resources>